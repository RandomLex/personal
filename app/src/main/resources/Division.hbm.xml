<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.barzykin.personal.model.Division" table="department">
        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>

        <many-to-one
                name="city"
                class="com.barzykin.personal.model.City"
                column="city_id"/>

        <set name="employees" table="department_employee" inverse="true">
            <key column="department_id"/>
            <many-to-many column="employee_id" class="com.barzykin.personal.model.Division"/>
        </set>

    </class>
</hibernate-mapping>